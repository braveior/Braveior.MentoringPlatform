@inherits LayoutComponentBase
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
    <MudAppBar Color="Color.Dark"  Elevation="1">
        <AuthorizeView>
            <Authorized>
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
            </Authorized>
        </AuthorizeView>
        <img align="left" src="images/braveior-logo.png" />
        <MudAppBarSpacer />
        <LoginInfo></LoginInfo>
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Menu</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <AuthorizeView Roles="2">
                <Authorized>
                    <MudNavLink Href="/profile">Profile</MudNavLink>
                    <MudNavLink Href="/approvals">Approval</MudNavLink>
                </Authorized>
            </AuthorizeView>
            <AuthorizeView Roles="1">
                <Authorized>
                    <MudNavLink Href="/profile">Profile</MudNavLink>
                    <MudNavLink Href="/resetpassword">Reset Password</MudNavLink>
                    <MudNavLink Href="/videobook">VideoBook</MudNavLink>
                </Authorized>
            </AuthorizeView>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        <MudContainer Class="mt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code{
    string headerColor = $"color:{Colors.Cyan.Darken4};";
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }

}